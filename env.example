# EU Voice Companion - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# OpenAI API Key (for GPT-4o reasoning)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Deepgram API Key (for streaming STT)
# Get from: https://console.deepgram.com/signup → Settings → API Keys
DEEPGRAM_API_KEY=your-deepgram-api-key

# ElevenLabs API Key (for streaming TTS)
# Get from: https://elevenlabs.io → Profile → API Keys
ELEVENLABS_API_KEY=sk_your-elevenlabs-api-key

# ElevenLabs Voice ID (optional, defaults to "Viola" German voice)
# Browse voices: https://elevenlabs.io/app/voice-library
ELEVENLABS_VOICE_ID=pMrwpTuGOma7Nubxs5jo

# =============================================================================
# REQUIRED: Twilio Configuration
# =============================================================================

# Twilio Account SID
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your-auth-token

# Twilio Phone Number (E.164 format)
TWILIO_NUMBER_E164=+1234567890

# =============================================================================
# REQUIRED: Application URL
# =============================================================================

# Your server's public HTTPS URL (needed for Twilio webhooks)
BASE_URL=https://your-domain.com

# =============================================================================
# OPTIONAL: Security
# =============================================================================

# Admin token for protected endpoints
ADMIN_TOKEN=your-secure-admin-token

# Fernet key for transcript encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=

# =============================================================================
# OPTIONAL: Model Configuration
# =============================================================================

# OpenAI model for reasoning (default: gpt-4o)
OPENAI_MODEL=gpt-4o

# Deepgram model (default: nova-2)
DEEPGRAM_MODEL=nova-2

# Deepgram language (default: de for German)
DEEPGRAM_LANGUAGE=de

# ElevenLabs model (default: eleven_turbo_v2_5 for lowest latency)
ELEVENLABS_MODEL=eleven_turbo_v2_5

# =============================================================================
# OPTIONAL: Voice Agent Tuning
# =============================================================================

# End-of-turn silence threshold in ms (default: 750)
END_OF_TURN_SILENCE_MS=750

# Grace period after silence in ms (default: 200)
GRACE_MS=200

# Minimum utterance length in ms (default: 600)
MIN_UTTERANCE_MS=600

# Maximum utterance length in ms (default: 15000)
MAX_UTTERANCE_MS=15000

# Barge-in detection threshold in ms (default: 150)
BARGE_IN_THRESHOLD_MS=150

# =============================================================================
# OPTIONAL: GDPR Settings
# =============================================================================

# Default retention period in days (default: 30)
DEFAULT_RETENTION_DAYS=30

# Enable transcript storage (default: true)
ENABLE_TRANSCRIPT_STORAGE=true